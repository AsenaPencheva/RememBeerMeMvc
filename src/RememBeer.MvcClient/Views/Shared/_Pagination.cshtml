@model RememBeer.MvcClient.Models.Shared.PaginatedViewModel

<div class="center-align">
    <ul class="pagination">
        @{
            var controller = ViewContext.RouteData.GetRequiredString("controller");
            var action = ViewContext.RouteData.GetRequiredString("action");
        }

        @if (Model.CurrentPage <= 0)
        {
            <li class="disabled">
                <a>
                    <i class="material-icons">chevron_left</i>
                </a>
            </li>
        }
        else
        {
            <li class="waves-effect">
                <a href="@Url.Action(action, controller, new { page = Model.CurrentPage - 1 })">
                    <i class="material-icons">chevron_left</i>
                </a>
            </li>
        }

        @for (var i = 0; i < 10; i++)
        {
            if (i == Model.CurrentPage)
            {
                <li class="active">
                    @Html.ActionLink(( i + 1 ).ToString(), action, controller, new { page = i }, null)
                </li>
                continue;
            }

            if (i * Model.PageSize >= Model.TotalCount)
            {
                break;
            }

            <li class="waves-effect">
                @Html.ActionLink(( i + 1 ).ToString(), action, controller, new { page = i }, null)
            </li>
        }

        @if (Model.CurrentPage * Model.PageSize >= Model.TotalCount - Model.PageSize)
        {
            <li class="disabled">
                <a>
                    <i class="material-icons">chevron_right</i>
                </a>
            </li>
        }
        else
        {
            <li class="waves-effect">
                <a href="@Url.Action(action, controller, new { page = Model.CurrentPage + 1 })">
                    <i class="material-icons">chevron_right</i>
                </a>
            </li>
        }
    </ul>
</div>