
@{
    ViewBag.Title = "TopBreweries";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IList<RememBeer.Models.Dtos.IBreweryRank>
<div class="card">
    <div class="card-content">
        <h3 colspan="4">Top Breweries</h3>
        
        <table class="bordered striped responsive-table">
            <thead>
            <tr>
                <td>Position</td>
                <td>Brewery</td>
                <td>Total Reviews</td>
                <td>Average Score</td>
            </tr>
            </thead>

            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].TotalBeersCount</td>
                    <td>@Model[i].AveragePerBeer</td>
                </tr>
            }
        </table>
    </div>
</div>