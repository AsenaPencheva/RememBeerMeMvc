@model IList<RememBeer.Models.Dtos.IBeerRank>


@{
    ViewBag.Title = "TopBeers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-content">
        <table class="bordered striped">
            <thead>
            <tr>
                <td>Position</td>
                <td>Beer</td>
                <td>Brewery</td>
                <td>Country</td>
                <td>Looks</td>
                <td>Aroma</td>
                <td>Taste</td>
                <td>Overall</td>
                <td>Final Score</td>
            </tr>
            </thead>

            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@i</td>
                    <td>@Model[i].Beer.Name</td>
                    <td>@Model[i].Beer.Brewery.Name</td>
                    <td>@Model[i].Beer.Brewery.Country</td>
                    <td>@Model[i].LookScore</td>
                    <td>@Model[i].SmellScore</td>
                    <td>@Model[i].TasteScore</td>
                    <td>@Model[i].OverallScore</td>
                    <td>@Model[i].CompositeScore</td>
                </tr>
            }
        </table>
    </div>
</div>