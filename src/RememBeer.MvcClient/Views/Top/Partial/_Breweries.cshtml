@model IList<RememBeer.Models.Dtos.IBreweryRank>
<div class="card">
    <div class="card-content">
        <h3>Top Breweries</h3>

        <table class="bordered striped responsive-table">
            <thead>
            <tr>
                <th>Position</th>
                <th>Brewery</th>
                <th>Total Reviews</th>
                <th>Average Score</th>
            </tr>
            </thead>

            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].TotalBeersCount</td>
                    <td>@Model[i].AveragePerBeer</td>
                </tr>
            }
        </table>
    </div>
</div>